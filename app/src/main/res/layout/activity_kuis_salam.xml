<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wahyuridiansyah.abrakadabra.quizActivity.praktikPerkenalan">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/frame_pertanyaan_kenal"
        android:background="@color/tulisanJudul"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/back_kuis"
            android:layout_gravity="center"
            android:contentDescription="kuis_Salam" />
    </FrameLayout>

    <TextView
        android:id="@+id/pertanyaan_salam"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="133dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:elevation="2dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ans1_salam"
        android:background="@color/backgroundQuestion"
        android:text=" Kula saking Magelang "
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/pertanyaan_salam"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans2_salam"
        android:layout_marginBottom="2dp"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/ans1_salam"
        android:layout_alignRight="@+id/ans1_salam"
        android:layout_alignEnd="@+id/ans1_salam"
        android:layout_alignLeft="@+id/ans1_salam"
        android:layout_alignStart="@+id/ans1_salam" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans3_salam"
        android:layout_marginBottom="2dp"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/ans2_salam"
        android:layout_alignRight="@+id/ans1_salam"
        android:layout_alignEnd="@+id/ans1_salam"
        android:layout_alignLeft="@+id/ans1_salam"
        android:layout_alignStart="@+id/ans1_salam" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ans4_salam"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/ans3_salam"
        android:layout_alignRight="@+id/ans1_salam"
        android:layout_alignEnd="@+id/ans1_salam"
        android:layout_alignLeft="@+id/ans1_salam"
        android:layout_alignStart="@+id/ans1_salam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_salam"
        android:text="Nilai 0 pts"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="20sp"/>
</RelativeLayout>
