<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wahyuridiansyah.abrakadabra.quizActivity.praktikKeluarga">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/frame_pertanyaan_keluarga"
        android:background="@color/tulisanJudul"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/image_kuis_keluarga"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/question_keluarga"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="133dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Nggawio kaya ing tuladhen ndhuwur!"
        android:elevation="2dp"
        android:layout_alignBottom="@+id/frame_pertanyaan_keluarga" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/question_keluarga">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isi1"
            android:background="@color/bg_isi"
            android:singleLine="true"
            android:layout_marginBottom="5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isi2"
            android:singleLine="true"
            android:background="@color/bg_isi"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isi3"
            android:singleLine="true"
            android:background="@color/bg_isi"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isi4"
            android:singleLine="true"
            android:background="@color/bg_isi"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isi5"
            android:singleLine="true"
            android:background="@color/bg_isi"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/isi6"
            android:singleLine="true"
            android:background="@color/bg_isi"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/next_keluarga"
        android:background="@drawable/border_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
