<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wahyuridiansyah.abrakadabra.quizActivity.kuisMedhayoh">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/frame_pertanyaan_med"
        android:background="@color/tulisanJudul"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/back_kuis"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/question_med"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:layout_below="@+id/frame_pertanyaan_med"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a0_med"
        android:background="@color/backgroundQuestion"
        android:text=" Kula saking Magelang "
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/question_med"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a1_med"
        android:layout_marginBottom="2dp"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/a0_med"
        android:layout_alignRight="@+id/a0_med"
        android:layout_alignEnd="@+id/a0_med"
        android:layout_alignLeft="@+id/a0_med"
        android:layout_alignStart="@+id/a0_med" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a2_med"
        android:layout_marginBottom="2dp"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/a1_med"
        android:layout_alignRight="@+id/a0_med"
        android:layout_alignEnd="@+id/a0_med"
        android:layout_alignLeft="@+id/a0_med"
        android:layout_alignStart="@+id/a0_med" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a3_med"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/a2_med"
        android:layout_marginBottom="2dp"
        android:layout_alignRight="@+id/a0_med"
        android:layout_alignEnd="@+id/a0_med"
        android:layout_alignLeft="@+id/a0_med"
        android:layout_alignStart="@+id/a0_med" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a4_med"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/a3_med"
        android:layout_marginBottom="2dp"
        android:layout_alignRight="@+id/a0_med"
        android:layout_alignEnd="@+id/a0_med"
        android:layout_alignLeft="@+id/a0_med"
        android:layout_alignStart="@+id/a0_med" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a5_med"
        android:background="@color/backgroundQuestion"
        android:layout_below="@+id/a4_med"
        android:layout_marginBottom="2dp"
        android:layout_alignRight="@+id/a0_med"
        android:layout_alignEnd="@+id/a0_med"
        android:layout_alignLeft="@+id/a0_med"
        android:layout_alignStart="@+id/a0_med" />

</RelativeLayout>
