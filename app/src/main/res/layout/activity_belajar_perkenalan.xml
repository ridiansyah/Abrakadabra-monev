<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/perkenalan1"
    tools:context="com.wahyuridiansyah.abrakadabra.materi.belajar_perkenalan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="Ngendikan Kaliyan Tanggi"
                android:textAlignment="center"
                android:textSize="38px"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andri" />

        <TextView
            android:id="@+id/balas1"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:text="Sugeng Dalu"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/chat_kenalan1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pak Darso"
                android:layout_alignParentRight="true"
                android:id="@+id/nama2"/>

            <TextView
                android:id="@+id/balas2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/nama2"
                android:text=" Sugeng Dalu "
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:background="@color/chat_kenalan1" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andri" />

        <TextView
            android:id="@+id/balas3"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" Nuwun sewu, tepangaken kula Andri, ingkang dalemipun nomer kalih. Badhe nyuwun priksa dalemipun pak RT ingkang pundi nggih?
 "
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/chat_kenalan1" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pak Darso"
                android:layout_alignParentRight="true"
                android:id="@+id/nama3"/>

            <TextView
                android:id="@+id/balas4"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/nama3"
                android:text=" Oh ingkang asmanipun Andri menika panjenengan toh. Nggih kula piyambak ingkang RT mriki"
                android:textColor="@android:color/white"
                android:gravity="center|left"
                android:layout_marginRight="10dp"
                android:background="@color/chat_kenalan1" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andri" />

        <TextView
            android:id="@+id/balas5"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" Nggih pak, kula badhe ngurus KTP kaliyan surat-surat "
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/chat_kenalan1" />

    </LinearLayout>
</ScrollView>
